{
  "name": "tartan-system",
  "version": "0.1.0",
  "description": "A complete tartan design-to-production platform for creating, exploring, and manufacturing mathematically valid tartan patterns",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "tartan",
    "plaid",
    "weaving",
    "textile",
    "pattern",
    "generator",
    "scottish",
    "design"
  ],
  "author": "Tartan System",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
